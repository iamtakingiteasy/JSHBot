<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distro</id>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.core:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/core</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.lib:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/lib</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.api:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/api</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.service:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/service</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.utils:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/utils</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.share:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/share</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles.protocols:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/protocols</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <outputDirectory>distribution/bundles/lib</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
