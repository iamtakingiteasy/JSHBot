<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distro</id>
    <moduleSets>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.core:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/core</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.api:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/api</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.protocols:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/protocols</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.bundles:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.tuicommands:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/tuicommands</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.eientei.jshbot.lib:*</include>
            </includes>
            <binaries>
                <outputDirectory>distribution/bundles/lib</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>